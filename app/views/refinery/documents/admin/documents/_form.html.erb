<%= form_for [refinery, :documents_admin, @document] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @document,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'widest' -%>
  </div>

  <div class='field'>
    <div class='page_part' id='<%= :description %>'>
      <%= f.label :description %>
      <%= f.text_area :description, :rows => 20, :class => 'wymeditor widest' -%>
    </div>
  </div>
  
  <div class='field'>
    <%= f.label :file -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :file_id,
               :resource => @document.file %>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.documents.admin.documents.document'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete') %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
